{
  "name": "react-webapp",
  "version": "1.0.0",
  "description": "react webapp",
  "main": "index.js",
  "scripts": {
    "test": "better-npm-run test",
    "clean": "rimraf index.html dist",
    "start": "better-npm-run start",
    "build": "better-npm-run build",
    "eslint": "eslint src",
    "stylelint": "stylelint src/**/*.scss"
  },
  "betterScripts": {
    "test": {
      "command": "karma start ./test/unit/karma.conf.js"
    },
    "start": {
      "command": "webpack-dev-server --config webpack --hot --inline --progress --colors",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "npm run clean && webpack -p --config webpack --define process.env.NODE_ENV='\"production\"' --progress --profile --colors",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [
    "react"
  ],
  "author": "zhaojintian",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
